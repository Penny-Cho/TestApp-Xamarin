<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="primary">#1E90FF</Color>
            <Color x:Key="secondary">#f25022</Color>
            <Color x:Key="textWhite">#fff</Color>
            <Color x:Key="textDefault">#2c2c2c</Color>

            <Style x:Key="buttonPrimary" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource primary}"/>
                <Setter Property="TextColor" Value="{StaticResource textWhite}" />
                <Setter Property="BorderRadius" Value="6" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0, 50, 0, 0" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application> 